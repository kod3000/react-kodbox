{
  "compilerOptions": {
    "target": "es5",                                
    "module": "commonjs",                            
    "outDir": "./dist",                              
    "rootDir": "./src",                             
    "strict": true,                                 
    "esModuleInterop": true, 
    "noImplicitAny": false,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,        
    "declaration": true,                            
    "declarationMap": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2015", "es2017", "es2018", "es2019", "es2020", "esnext"],                      
  },
  "include": [
    "src/**/*.tsx"                                  
  ],
  "exclude": [
    "node_modules",                                 
    "**/*.test.ts"                                 
  ]
}
